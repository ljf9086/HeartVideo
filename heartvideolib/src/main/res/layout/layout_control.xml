<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00000000"
    android:id="@+id/control_parent_layout">

    <ImageView
        android:id="@+id/placeiv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"/>

    <LinearLayout
        android:id="@+id/control_title_layout"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#a0000000"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/control_title_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/back"
            android:padding="5dp"/>

        <TextView
            android:id="@+id/control_title_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="#ffffff"
            android:textSize="15sp"
            android:maxLines="1"
            android:paddingLeft="10dp"/>

        <ImageView
            android:id="@+id/control_title_battery"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/battery_10"
           android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"/>

    </LinearLayout>


    <LinearLayout
        android:id="@+id/control_bottom_layout"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#000000"
        android:layout_alignParentBottom="true"
        android:gravity="center_vertical"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">

        <ImageView
            android:id="@+id/control_start_btn"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@mipmap/icon_video_play"/>

        <SeekBar
            android:id="@+id/control_seekbar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:max="100"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            style="@style/CustomSeekbarStyle"/>

        <TextView
            android:id="@+id/control_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00:00/00:00"
            android:textSize="13sp"
            android:textColor="#ffffff"
            android:layout_marginRight="10dp"/>

        <TextView
            android:id="@+id/control_line"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:text="高清"
            android:textColor="#ffffff"
            android:textSize="13sp"/>

        <ImageView
            android:id="@+id/control_full"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@mipmap/iconfont_enter_32"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/control_loading_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerInParent="true">

        <ImageView
            android:id="@+id/control_loading_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:src="@mipmap/loading"/>
        <TextView
            android:id="@+id/control_loading_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="正在加载..."
            android:textSize="13sp"
            android:textColor="#ffffff"
            android:layout_marginTop="10dp"/>

    </LinearLayout>

    <ImageView
        android:id="@+id/control_center_play"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/play"
        android:layout_centerInParent="true"/>


</RelativeLayout>
